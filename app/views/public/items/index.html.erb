<h4>public items index</h4>
<div class="container col-lg-8">
  <h3>商品一覧(全<%= @item.count %>件)</h3>
  <div class="row">
    <% @items.each do |item| %>
      <div class="item-image col-md-3">
        <%=link_to public_item_path(item) do %>
          <% if item.image.attached? %>
            <%= image_tag item.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
        <% end %></dr>
        <div class="item-name">
          <%= item.name %>
        </div>
        <div class="item-price">
          ¥<%= item.price %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="pagenation mx-auto">
      <%= paginate @items %>
    </div>
  </div>
</div>


