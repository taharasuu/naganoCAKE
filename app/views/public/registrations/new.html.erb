<div class="container col-lg-8">
  <div class="row">
    <h3 class="page-name">新規会員登録</h3>
  </div>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table>
      <tr>
        <th><%= f.label :名前 %></th>
        <td><%= f.label :（性） %></td>
        <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
        <td><%= f.label :（名） %></td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
      </tr>
      <tr>
        <th><%= f.label :フリガナ %></th>
        <td><%= f.label :（セイ） %></td>
        <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
        <td><%= f.label :（メイ） %></td>
        <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
      </tr>
      <tr>
        <th><%= f.label :メールアドレス %></th>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <th><%= f.label :郵便番号（ハイフンなし） %></th>
        <td></td>
        <td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
      </tr>
      <tr>
        <th><%= f.label :住所 %></th>
        <td></td>
        <td><%= f.text_field :address, autocomplete: "address" %></td>
      </tr>
      <tr>
        <th><%= f.label :電話番号（ハイフンなし） %></th>
        <td></td>
        <td><%= f.telephone_field :telephone_number, autocomplete: "telephone_number" %></td>
      </tr>
      <tr>
        <th><%= f.label :パスワード %><% if @minimum_password_length %>
                                      <em>(<%= @minimum_password_length %> 文字以上)</em>
                                      <% end %></th>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th><%= f.label :パスワード（確認用） %></th>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th></th>
        <td></td>
        <td><%= f.submit "新規登録" , class: "btn btn-sm btn-success"%></td>
      </tr>
    </table>
    <% end %>
  </div>

  <div class="row">
    <h3 class="page-name">既に登録済みの方</h3>
  </div>
  <div class="row">
    <%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
  </div>
</div>





