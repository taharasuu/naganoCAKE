<h4>public customers show</h4>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h3 class="page-name">マイページ</h3>
    </div>
  </div>
</div>

      <div class="form-group">
        <strong>新規登録</strong>
        <%= link_to edit_public_customer_path(current_customer) , class: 'btn btn-sm btn-success' do %>
        <span>編集する</span>
        <% end %>
      </div>

      <table border="table table-hover table-inverse">
        <tr>
          <th class="tate-th">氏名</th>
          <td><%= @current_customer.first_name %><%= @current_customer.last_name %></td>
        </tr>
        <tr>
          <th class="tate-th">フリガナ</th>
          <td><%= @current_customer.first_name_kana %><%= @current_customer.last_name_kana %></td>
        </tr>
        <tr>
          <th class="tate-th">郵便番号</th>
          <td><%= @current_customer.postal_code %></td>
        </tr>
        <tr>
          <th class="tate-th">住所</th>
          <td><%= @current_customer.address %></td>
        </tr>
        <tr>
          <th class="tate-th">電話番号</th>
          <td><%= @current_customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="tate-th">メールアドレス</th>
          <td><%= @current_customer.email %></td>
        </tr>
      </table>

      <table>
        <tr>
          <th>配送先</th>
          <td>
            <%= link_to public_addresses_path , class: 'btn btn-primary' do %>
            <span>一覧を見る　</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>注文履歴</th>
          <td>
            <%= link_to public_orders_path , class: 'btn btn-primary' do %>
            <span>一覧を見る　</span>
            <% end %>
          </td>
        </tr>
      </table>



