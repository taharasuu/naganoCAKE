<h4>admin items new</h4>

<div class="container">
  <h3 class="page-name">商品新規登録</h3>
    <div class="row">
      <table class="item-new">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <tr>
          <th>商品画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name , class: "form-control item_name" %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction , class: "form-control item_price"%></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :price , class: "form-control item_price" %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= f.radio_button :is_active, true %><label for="item_is_active">販売中</label>
              <%= f.radio_button :is_active, false %><label for="item_is_active">販売停止中</label>
          </td>
        </tr>
      </table>
    </div>
    <div class="row">
      <div class="mx-auto">
      <%= f.submit'新規登録' , class: "btn btn-success" %>
      <% end %>
      </div>
    </div>
</div>