<h4>admin items show</h4>

<div class="container">
  <div class="row">
    <h3 class="page-name">商品詳細</h3>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
      <% end %>
    </div>

    <table class="col-lg-8">
      <tr>
        <th>商品名</th>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
      <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <th>税抜価格</th>
        <td><%= @item.price %>円</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td class="td-statu">
          <% if @item.is_active = false %>
            <p>販売中止</p>
          <% else %>
            <P>販売中</P>
          <% end %>
        </td>
      </tr>
    </table>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= link_to edit_admin_item_path(@item) , class: 'btn btn-success' do %>
        <span>編集する</span>
      <% end %>
    </div>
  </div>

</div>




