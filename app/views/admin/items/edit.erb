<h4>admin items edit</h4>
<div class="container">
  <div class="row">
    <h3 class="page-name">商品編集</h3>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @item, url: admin_item_path(@item) , method: :patch do |f| %>
      <table>
        <tr>
          <th>商品画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th>商品名</th>
          <td><%= f.text_field :name , class: "form-control item_name" %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= f.text_area :introduction , class: "form-control item_price"%></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></td>
        </tr>
        <tr>
          <th>税抜価格</th>
          <td><%= f.text_field :price , class: "form-control item_price" %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= f.radio_button :is_active, true %><label for="item_is_active">販売中</label>
              <%= f.radio_button :is_active, false %><label for="item_is_active">販売停止中</label>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= f.submit'変更を保存' , class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>

</div>