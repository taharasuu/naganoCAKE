<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h3 class="page-name">管理者ログイン</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table>
        <tr>
          <th><%= f.label :メールアドレス %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th><%= f.label :パスワード %></th>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "ログイン" , class: "btn btn-primary"%></td>
        </tr>
      </table>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
